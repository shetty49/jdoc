import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintStream;

public class FileLoggerDirect {
    private static final Logger logger = LoggerFactory.getLogger(FileLoggerDirect.class);

    static {
        setupFileLogging("application.log");
    }

    // Redirects logger output to the file
    private static void setupFileLogging(String logFile) {
        try {
            PrintStream fileOut = new PrintStream(new FileWriter(logFile, true));
            System.setOut(fileOut);  // Redirects System.out to file
            System.setErr(fileOut); // Redirects System.err to file
        } catch (IOException e) {
            System.err.println("Failed to set up file logging: " + e.getMessage());
        }
    }

    public void method1() {
        logger.info("This is an info log from method1.");
        logger.error("This is an error log from method1.");
    }

    public void method2() {
        logger.info("This is an info log from method2.");
        logger.warn("This is a warning log from method2.");
    }
}
